{
  "compilerOptions": {
    "target": "es2018", // 또는 ES 버전에 맞추어 설정
    "module": "commonjs", // CommonJS로 변경
    "outDir": "./dist", // JavaScript 파일이 생성될 디렉토리
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
